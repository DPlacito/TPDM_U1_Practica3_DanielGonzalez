<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imagen2"
    tools:context=".Main2Activity">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/numero" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TIPS \n TO BUILD A \n LANGUAGE \nLEARNING \nHABIT"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:textSize="54dp"
    android:textColor="#574C5C"
    android:fontFamily="sans-serif-black"
    android:textStyle="bold"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="+  free \n New Habit \n Tracker!"
android:textSize="28dp"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#574C5C"
            android:fontFamily="casual"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/ventanas" />
    </LinearLayout>
</LinearLayout>